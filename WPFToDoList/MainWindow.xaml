<Window x:Class="WPFToDoList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFToDoList"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <StackPanel Orientation="Vertical" Margin="10">
        <TextBox Text="{Binding NewTaskName, UpdateSourceTrigger=PropertyChanged}"
                 Margin="0,0,0,10">
        </TextBox>
        <Button Content="Добавить" Command="{Binding AddCommand}"
                Margin="0,0,0,10">
        </Button>
        <Button Content="Удалить" Command="{Binding DeleteCommand}"
        Margin="0,0,0,10">
        </Button>
        <ListBox ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedItem}"></ListBox>
    </StackPanel>
</Window>
